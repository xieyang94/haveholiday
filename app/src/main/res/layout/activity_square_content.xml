<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="30dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/title_back"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/title_back_selecter" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="节日推送"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="30dip"
                    android:layout_height="30dip" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/square_layout_title"
                android:layout_width="match_parent"
                android:layout_height="180dip">

                <ImageView
                    android:id="@+id/pf_ContentBg"
                    android:layout_width="match_parent"
                    android:layout_height="180dip" />

                <TextView
                    android:id="@+id/pf_ContentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dip"
                    android:padding="5dip"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/pf_Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="vertical"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:lineSpacingExtra="5dip"
                android:singleLine="false"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/pf_Content2"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_height="180dip" />

            <TextView
                android:id="@+id/pf_Content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:lineSpacingExtra="5dip"
                android:singleLine="false"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/pf_Content4"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_height="180dip"/>

            <TextView
                android:id="@+id/pf_Content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:lineSpacingExtra="5dip"
                android:singleLine="false"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/pf_Content6"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_height="180dip" />

            <TextView
                android:id="@+id/pf_Content7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:scrollbars="vertical"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:lineSpacingExtra="5dip"
                android:singleLine="false"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本文发布时间:" />

                <TextView
                    android:id="@+id/pf_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/white"
                    android:scrollbars="vertical"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/deep_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/like_State"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/like_Count"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="送花" />
            </LinearLayout>

            <View
                android:layout_width="0.5dip"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:background="@color/deep_grey" />

            <LinearLayout
                android:id="@+id/reply"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/reply_Count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="回复" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>