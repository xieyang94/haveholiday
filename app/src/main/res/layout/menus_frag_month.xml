<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="170dip"
        app:canLoop="true">

    </com.bigkoo.convenientbanner.ConvenientBanner>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.xieyang.viewpager.MyPagerGalleryView
                android:id="@+id/gallerview"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true">

            <!-- 上面控件要显示的txtview -->

            <TextView
                android:id="@+id/adgallerytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="invisible" />
            <!-- 圆点容器 -->

            <LinearLayout
                android:id="@+id/ovalLayout1"
                android:layout_width="wrap_content"
                android:layout_height="10dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="24dp"
                android:background="@color/white00"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/month_January"
                style="@style/monthTextStyle"
                android:text="一月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_February"
                style="@style/monthTextStyle"
                android:text="二月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_March"
                style="@style/monthTextStyle"
                android:text="三月" />
        </TableRow>

        <View style="@style/viewLine2" />

        <TableRow
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/month_April"
                style="@style/monthTextStyle"
                android:text="四月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_May"
                style="@style/monthTextStyle"
                android:text="五月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_June"
                style="@style/monthTextStyle"
                android:text="六月" />
        </TableRow>

        <View style="@style/viewLine2" />

        <TableRow
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/month_July"
                style="@style/monthTextStyle"
                android:text="七月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_August"
                style="@style/monthTextStyle"
                android:text="八月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_September"
                style="@style/monthTextStyle"
                android:text="九月" />
        </TableRow>

        <View style="@style/viewLine2" />

        <TableRow
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/month_October"
                style="@style/monthTextStyle"
                android:text="十月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_November"
                style="@style/monthTextStyle"
                android:text="十一月" />

            <View style="@style/viewLine1" />

            <TextView
                android:id="@+id/month_December"
                style="@style/monthTextStyle"
                android:text="十二月" />
        </TableRow>

        <View style="@style/viewLine2" />
    </TableLayout>

</LinearLayout>